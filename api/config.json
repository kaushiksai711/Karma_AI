{
  "reward_probability_threshold": 0.9,
  "reward_rules": {
    "streak_engager": {
      "conditions": [
        "login_streak >= 4",
        "posts_created >= 2",
        "quizzes_completed >= 2"
      ],
      "description": "Consistent engagement across multiple days"
    },
    "quiz_enthusiast": {
      "conditions": [
        "quizzes_completed >= 5",
        "login_streak >= 3"
      ],
      "description": "Regular quiz participation"
    },
    "community_champion": {
      "conditions": [
        "posts_created >= 3",
        "upvotes_received >= 12",
        "buddies_messaged >= 4"
      ],
      "description": "High-quality content creator and community engager"
    },
    "knowledge_contributor": {
      "conditions": [
        "quizzes_completed >= 2",
        "karma_earned_today >= 30",
        "login_streak >= 2"
      ],
      "description": "Active learner and knowledge sharer"
    },
    "social_butterfly": {
      "conditions": [
        "buddies_messaged >= 5",
        "posts_created >= 1",
        "comments_written >= 2"
      ],
      "description": "Active in social interactions"
    },
    "balanced_contributor": {
      "conditions": [
        "posts_created >= 3",
        "comments_written >= 3",
        "buddies_messaged >= 4",
        "upvotes_received >= 12"
      ],
      "description": "Well-rounded community participation"
    },
    "karma_trader": {
      "conditions": [
        "karma_spent >= 15",
        "karma_earned_today >= 15"
      ],
      "description": "Active in both giving and receiving karma"
    },
    "rising_star": {
      "conditions": [
        "upvotes_received >= 8",
        "karma_earned_today >= 12",
        "login_streak <= 7"
      ],
      "description": "New user showing great potential"
    },
    "creative_scholar": {
      "conditions": [
