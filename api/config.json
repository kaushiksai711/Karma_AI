    "community_glue": {
      "conditions": [
        "buddies_messaged >= 6",
        "karma_spent >= 18",
        "login_streak >= 5"
      ],
      "description": "Holding the community together"
    },
    "active_supporter": {
      "conditions": [
        "login_streak >= 10",
        "karma_earned_today >= 25"
      ],
      "description": "Consistent and supportive community member"
    },
    "mystery_enthusiast": {
      "conditions": [
        "quizzes_completed >= 4",
        "posts_created >= 3",
        "comments_written >= 2",
        "karma_earned_today >= 15",
        "karma_spent >= 15"
      ],
      "description": "Enthusiastic participant in various activities"
    },
    "quiz_completion": {
      "conditions": [
        "quizzes_completed >= 5",
        "posts_created <= 1",
        "comments_written <= 1"
      ],
